---
import Layout from "../layouts/Layout.astro";

import logo from "~/assets/images/hk-logo.png";

import { getIsLoggedIn } from "../supabase/auth";
import WavyBox from "../components/shared/WavyBox.astro";

if (getIsLoggedIn(Astro.cookies)) {
  return Astro.redirect("/recipes");
}
---

<Layout title="Harrison's Kitchen">
  <header>
    <hgroup>
      <h1>What's for dinner?</h1>
      <p>The kitchen that meal plans for you.</p>
    </hgroup>
    <img
      class="logo"
      src={logo.src}
      width={logo.width}
      height={logo.height}
      alt="Harrison's Kitchen"
    />
  </header>
  <WavyBox tag="main">
    <a href="/login" class="button primary">Sign In</a>
    <a href="/signup" class="button secondary">Sign Up</a>
  </WavyBox>
</Layout>
<style>
  header {
    z-index: 1;
  }

  header hgroup {
    margin: 10rem 0 3.5rem 2rem;
  }

  header img {
    --logo-width: min(max(12rem, 40vw), 24rem);
    width: var(--logo-width);
    height: auto;
    margin-bottom: calc(var(--logo-width) / -2);
    align-self: flex-start;
  }

  body {
    display: flex;
    flex-direction: column;
  }

  main {
    flex: 1;

    display: flex;
    flex-direction: column;
    justify-content: center;
    align-items: center;
    gap: 1rem;
  }

  main a {
    min-width: 12rem;
    max-width: 18em;
  }
</style>
