<form id="auth-form" hx-post="/api/login" hx-target="this">
  <input type="text" id="email" name="email" placeholder="email" />
  <input type="password" id="password" name="password" placeholder="password" />
  <button type="submit">Log in</button>
  <a
    href="/signup"
    hx-get="/signup"
    hx-push-url="true"
    hx-select="#auth-form"
    hx-target="#auth-form"
    hx-swap="outerHTML">Switch to Signup</a
  >
</form>
