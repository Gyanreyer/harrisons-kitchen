---
import Input from "../shared/Input.astro";
import AuthForm from "./AuthForm.astro";
---

<AuthForm apiURL="/api/signup">
  <div class="row">
    <Input
      aria-label="First Name"
      id="first-name"
      name="first-name"
      placeholder="First Name"
    />
    <Input
      aria-label="Last Name"
      id="last-name"
      name="last-name"
      placeholder="Last Name"
    />
  </div>
  <Input aria-label="Email" id="email" name="email" placeholder="Email" />
  <Input
    aria-label="Password"
    type="password"
    id="password"
    name="password"
    placeholder="Password"
  />
  <button type="submit">Sign up</button>
</AuthForm>
